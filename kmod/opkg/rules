#!/bin/sh
set -e 

PACKAGE=kmod

case "$1" in
  build)
    CC='clang' CXX='clang++' ./configure --prefix='' --sysconfdir=/etc --with-xz --with-zlib
    make
    ;;

  install)
    rm -rf /tmp/$PACKAGE
    mkdir -p /tmp/$PACKAGE
    DESTDIR=/tmp/$PACKAGE
    make install DESTDIR=$DESTDIR
    ;;

  clean)
    make clean
    ;;

  *)
    echo unknown argument $1
    ;;
esac
