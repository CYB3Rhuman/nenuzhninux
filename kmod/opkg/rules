#!/bin/sh
set -e 

PACKAGE=kmod

case "$1" in
  build)
    autoreconf -f -i
    ./configure --prefix='' --sysconfdir=/etc --with-xz --disable-manpages #--with-zlib
    make
    ;;

  install)
    rm -rf /tmp/$PACKAGE
    mkdir -p /tmp/$PACKAGE
    DESTDIR=/tmp/$PACKAGE
    make install DESTDIR=$DESTDIR
    rm $DESTDIR/lib/libkmod.la
    ;;

  clean)
    make clean
    ;;

  *)
    echo unknown argument $1
    ;;
esac
