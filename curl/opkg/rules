#!/bin/sh
set -e 

PACKAGE=curl

case "$1" in
  build)
    patch -p1 < opkg/clang-triple.patch
    autoreconf -f -i
    ./configure CC='clang' --prefix="" --with-libssh2 --with-ca-path=/etc/ssl --with-ca-bundle=/etc/ssl/cert.pem --disable-static
    make
    ;;

  install)
    rm -rf /tmp/$PACKAGE
    mkdir -p /tmp/$PACKAGE
    DESTDIR=/tmp/$PACKAGE
    make install DESTDIR=$DESTDIR
    rm $DESTDIR/lib/libcurl.la
    ;;

  clean)
    make clean
    ;;

  *)
    echo unknown argument $1
    ;;
esac
